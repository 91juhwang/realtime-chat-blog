<div class="col-md-6 col-md-offset-3 borders">
  <article class="detail-article">
    <h1 class="article-detail-title"><%= @article.title %></h1>

    <div class="glyphicon glyphicon-calendar" id="article-date">
      <%= @article.created_at.strftime("%b %d %Y") %>
    </div>

    <div class="article-body">
      <%= @article.body %>
    </div>
  </article class="detail-article">
  <div class="edit-delete">
    <%= link_to 'Delete Article', article_path(@article.id), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-primary btn-space btn-md pull-right" %>
    <%= link_to 'Edit Article', edit_article_path(@article.id), class: "btn btn-primary btn-space btn-md pull-right edit-btn" %>
  </div>
</div>