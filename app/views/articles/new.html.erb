<h1 class="text-center">Adding a new article</h1>
<%= link_to "Back to all articles", articles_path %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article, html: {class: "form-horizontal", role: "form"} do |f| %> 
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :title %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of an article', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :body %>
        </div>
        <div class="col-md-11">
          <%= f.text_area :body, rows: 10, class: 'form-horizontal', placeholder: 'Body of an article' %>
        </div>
      </div>
      <div class="form-grop">
        <div class="col-md-offset-1 col-md-1">
          <%= f.submit class: 'btn btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>